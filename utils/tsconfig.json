{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../utils-dist",
    "target": "ESNext",
    "module": "node18",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@sources/*": ["./sources/*"],
      "@appTypes/*": ["../types/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
