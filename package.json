{
  "name": "site-aggregator",
  "version": "0.1.0",
  "private": true,
  "description": "A lightweight content aggregation system that collects, stores, and displays articles from web URLs and RSS feeds",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev  --envName=development --logLevel=verbose",
    "generate:dev": "nuxt generate --envName=development --logLevel=verbose --preset github_pages",
    "generate:production": "nuxt generate --envName=production --logLevel=verbose --preset github_pages",
    "preview": "nuxt preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint \"**/*.scss|vue\" ",
    "lint:style:fix": "stylelint \"**/*.scss|vue\" --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .nuxt dist .output",
    "clean:utils": "rm -rf utils-dist",
    "prepare": "husky install",
    "aggregate:dev": "ts-node --esm utils/aggregator.ts",
    "aggregate:watch": "ts-node --watch --esm utils/aggregator.ts",
    "aggregate:build": "NODE_OPTIONS=\"--trace-deprecation\" pnpm exec tsx --tsconfig utils/tsconfig.json utils/aggregator.ts",
    "prebuild": "pnpm aggregate:build"
  },
  "dependencies": {
    "@nuxt/content": "3.4.0",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0",
    "feed-reader": "^1.1.6",
    "nuxt": "^3.10.0",
    "rss-parser": "^3.13.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.2.0",
    "@nuxt/eslint-config": "^1.2.0",
    "@nuxt/types": "^2.17.3",
    "@nuxtjs/style-resources": "^2.0.0",
    "@playwright/test": "^1.58.1",
    "@types/node": "^22.13.10",
    "@types/turndown": "^5.0.5",
    "@types/xml2js": "^0.4.14",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.5.0",
    "better-sqlite3": "^11.9.1",
    "eslint": "^9.22.0",
    "glob": "^11.0.1",
    "happy-dom": "^13.0.0",
    "he": "^1.2.0",
    "husky": "^9.0.0",
    "jiti": "^2.4.2",
    "node-html-parser": "^7.0.1",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.0",
    "sass": "^1.70.0",
    "sass-loader": "^14.0.0",
    "stylelint": "^16.19.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-scss": "^15.0.0",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^15.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "turndown": "^7.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.2.0",
    "vue-tsc": "^2.2.8"
  },
  "packageManager": "pnpm@10.6.2+sha512.47870716bea1572b53df34ad8647b42962bc790ce2bf4562ba0f643237d7302a3d6a8ecef9e4bdfc01d23af1969aa90485d4cebb0b9638fa5ef1daef656f6c1b",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "better-sqlite3",
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "node-expat"
    ]
  }
}
