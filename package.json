{
  "name": "site-aggregator",
  "version": "0.1.0",
  "private": true,
  "description": "A lightweight content aggregation system that collects, stores, and displays articles from web URLs and RSS feeds",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .nuxt dist .output",
    "prepare": "husky install",
    "collect": "node scripts/aggregator.js"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "feed-reader": "^1.1.6",
    "nuxt": "^3.10.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@nuxt/types": "^2.17.3",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/style-resources": "^2.0.0",
    "@types/node": "^22.13.10",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^9.22.0",
    "happy-dom": "^13.0.0",
    "husky": "^9.0.0",
    "prettier": "^3.2.0",
    "sass": "^1.70.0",
    "sass-loader": "^14.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.2.0",
    "vue-tsc": "^2.2.8"
  }
}